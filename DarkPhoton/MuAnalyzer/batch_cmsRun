#!/bin/sh

SCRAM_ARCH=$1
RELSPACE=$2
WORKSPACE=$3
FILE=$4

if [ $# -gt "4" ]
then
    LOG=$5
else
    LOG=${FILE%%.cfg}.log
fi

if [ $# -gt "5" ]
then
    ELOG=$6
else
    ELOG=${FILE%%.cfg}.elog
fi

if [ $# -gt "6" ]
then
    /bin/rm -f $7
fi

if [ $# -gt "7" ]
then
    sleep $8
fi

# this is an attempt to make HDFS happy by pre-reading the file
if [ $# -gt "8" ]
then
    head $9 > /dev/null 2>/dev/null
    sleep 1
    head $9 > /dev/null 2>/dev/null
    sleep 1
    head $9 > /dev/null 2>/dev/null
fi

if [ $# -gt "13" ]
then

     CMSRUN_ARGUMENTS=${10}" "${11}" "${12}" "${13}" "${14}

fi


mkdir -p ${WORKSPACE} 
cd ${WORKSPACE}
/bin/rm -f ${LOG} ${ELOG} ${LOG}.gz ${ELOG}.gz
/bin/hostname > ${LOG}
echo "INSIDE batch_cmsRun" >> ${LOG}
echo ${RELSPACE} >> ${LOG}
echo ${CMSRUN_ARGUMENTS} >> ${LOG}
eval 'pwd' >> ${LOG}
# This version uses the locally installed versions of CMSSW
#source /local/cms/sw/cmsset_${SCRAM_ARCH}.sh >> ${LOG} 2>> ${ELOG}
# This version uses the remotely mounted drives at CERN
source /local/grid/cmssoft/cms/cmsset_default.sh >> ${LOG} 2>> ${ELOG}
#echo "TESTING" >> ${LOG}
#set >> ${LOG}
cd ${RELSPACE}
#echo ======================== >> ${LOG}
#scram runtime -sh >> ${LOG} 2>>${ELOG}
#echo ======================== >> ${LOG}
cmsenv >> ${LOG} 2>> ${ELOG}
#echo ======================== >> ${LOG}
#set >> ${LOG}
cd ${WORKSPACE}
cmsRun ${FILE} ${CMSRUN_ARGUMENTS} >> ${LOG} 2>> ${ELOG}

gzip --best -f ${LOG}

gzip --best -f ${ELOG}
